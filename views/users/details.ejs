<%- include('../partials/header') %>
<div class="container-xxl px-md-5 bg-white shadow-lg">
<header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
  <a href="/" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">
    <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
  </a>
  <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
    <li><a href="/users/home" class="nav-link px-2 link-secondary">Home</a></li>
    <li><a href="/recipes" class="nav-link px-2 link-secondary">All Recipes</a></li>
    <li><a href="/recipes/new" class="nav-link px-2 link-secondary">Submit Recipe</a></li>
    <li><a href="/users/book" class="nav-link px-2 link-secondary">My Book</a></li>
  </ul>
  <div class="col-md-3 text-end">
  <button type="button" class="btn btn-outline-primary me-2"><a href="/users/logout">Log out</a></button>
  </div>
</header>
 <!-- Start of display author (userName)'s submitted recipes -->
<section class="show-page">
<div class="row justify-content-center">
  <div class="col-8">
<form id="new-form" action="/recipes" method="POST" >
  <h1><pre><%= recipe.name %></pre></h1>
    <div for="image" class="col-12"><img src="<%= recipe.image %>" width="200" height="200"/></div>
    <div for="category" class="col-12">Category: <pre><%= recipe.category %></pre></div>
    <br>
    <div for="ingredients" class="form-label">Ingredients:</div> <br />
    <div><pre><%= recipe.ingredients %></pre></div>
    <br>
    <div for="methods" class="col-12">Methods:</div> <br />
    <div><pre><%= recipe.methods %></pre></div> 
    <br>
    <div for="duration" class="col-12">Duration: <pre><%= recipe.duration %></pre></div>
    <br>
</form>
 <!-- End of display author (userName)'s submitted recipes -->
 
<br>
<!-- Start of Recipe's Edit, Update and Delete section -->
<form action="/recipes/<%=recipe.id%>/edit" method="GET>
  <% const recipeLink = `/recipes/edit/${recipe._id}`%>
  <button type="button" class="btn btn-sm btn-outline-secondary"><a href="<%=recipeLink%>">Update Recipe</a></button>
</form>
<br><br>
<form action="/recipes/<%=recipe._id%>?_method=DELETE" method="post">
  <button type="submit" class="btn btn-primary">Delete</button>
</form>
<br>
<button type="button" class="btn btn-sm btn-outline-secondary"><a href="/users/book">All My Recipes</a></button> 
<br>
<!-- End of Recipe's Edit, Update and Delete section -->
</div>
</div>
</section>
<%- include('../partials/footer') %>
</div>



